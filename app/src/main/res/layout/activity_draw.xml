<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".DrawActivity"
    android:orientation="vertical"
    android:background="#89b1b1b1">

    <edu.scu.apadha.arttherapy.DrawView
        android:id="@+id/drawCanvas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="#ffffffff"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/colors"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:paddingTop="10dp">
        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/red"
            android:background="#FF0000"
            android:tag="#FF0000"
            android:onClick="colorSelected"
            android:layout_marginRight="13dp"/>
        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/green"
            android:background="#00FF00"
            android:tag="#00FF00"
            android:onClick="colorSelected"
            android:layout_marginRight="13dp" />
        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/blue"
            android:background="#ff00ddff"
            android:tag="#ff00ddff"
            android:onClick="colorSelected"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="13dp" />
        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/yellow"
            android:background="#FFFFF511"
            android:tag="#FFFFF511"
            android:onClick="colorSelected"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="13dp" />
        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/orange"
            android:background="#ffff8800"
            android:tag="#ffff8800"
            android:onClick="colorSelected"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="13dp" />
        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/pink"
            android:background="#FF1493"
            android:tag="#FF1493"
            android:onClick="colorSelected"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="13dp" />
        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/violet"
            android:background="#8A2BE2"
            android:tag="#8A2BE2"
            android:onClick="colorSelected"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="13dp" />
        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/brown"
            android:background="#8B4513"
            android:tag="#8B4513"
            android:onClick="colorSelected"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="13dp" />
        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/black"
            android:background="#ff000000"
            android:tag="#ff000000"
            android:onClick="colorSelected"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="13dp" />
        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/white"
            android:background="#ffffffff"
            android:tag="#ffffffff"
            android:onClick="colorSelected"
            android:layout_alignParentBottom="true"
            />
    </LinearLayout>


</LinearLayout>
